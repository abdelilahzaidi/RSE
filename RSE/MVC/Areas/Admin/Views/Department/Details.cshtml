@model MVC.Models.ViewModel.DepartmentDetail

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>

<div>
    <h4>Informations générales</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Admin)
        </dt>

        <dd>
            @Html.ActionLink(Model.Admin.Name,"Details", new { controller = "Employee", id = Model.Admin.Id})
        </dd>

    </dl>
</div>
<div>
    <h5>@Html.DisplayNameFor(model => model.Members)</h5>
    <hr />
    @Html.Partial("_EmployeeList", Model.Members)
</div>
<p>
    @Html.ActionLink("Modifier", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Revenir à la liste des départements", "Index")
</p>
