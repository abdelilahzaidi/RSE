@model MVC.Models.ViewModel.DocumentEditForm

@{
    ViewBag.Title = "Edit";
}

<h2>@Model.Name</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Veuillez introduire les modifications, ensuite sauvegarder</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>


    @Html.HiddenFor(model => model.ModifiedDate)
    @Html.HiddenFor(model => model.Name)
    @Html.HiddenFor(model => model.Extention)

    @Html.HiddenFor(model => model.EmployeeId)

    @Html.HiddenFor(model => model.FileBinId)
    @Html.HiddenFor(model => model.OldFileId)


   

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Sauvegarder" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Retour aux détails du document", "Details", new { id=Model.Id})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
