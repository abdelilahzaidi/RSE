@model IEnumerable<MVC.Models.ViewModel.EventEmployeeListItem>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GSM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Present)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    <a href="mailto:@item.Email">@item.Email</a>
                </td>
                <td>
                    <a href="callto:@item.GSM">@item.GSM</a>
                </td>
                @if (item.Present != null)
                {
                    if ((bool)item.Present)
                    {
                        <td>Participe</td>
                    }
                    else
                    {
                        <td>Ne participe pas</td>
                    }
                }
                else
                {
                    <td>N'a pas répondu</td>
                }

                <td>
                    @Html.ActionLink("Détails", "Details", new { controller = "Employee", id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
