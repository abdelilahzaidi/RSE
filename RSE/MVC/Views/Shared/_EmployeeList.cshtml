                    <a href="mailto:@item.Email">@item.Email</a>
                </td>
                <td>
                    <a href="callto:@item.GSM">@item.GSM</a>
                </td>
                <td>
                    @Html.ActionLink("Détails", "Details", new { controller = "Employee", id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
