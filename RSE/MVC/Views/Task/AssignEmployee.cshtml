@model IEnumerable<MVC.Models.ViewModel.EmployeeListItem>

@{
    ViewBag.Title = "AssignEmployee";
}

<h2>Assigner un employé à une tâche</h2>
<p>Veuillez sélectionner un employé faisant parti des membres du projet pour lui assigner la tâche.</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GSM)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GSM)
                </td>
                <td>
                    @Html.ActionLink("Assigner à la tâche", "ConfirmAssignEmployee", new { taskId = Request.Url.Segments.Last(), empId = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Revenir aux détails de la tâche", "Details", new {id= Request.Url.Segments.Last()})
