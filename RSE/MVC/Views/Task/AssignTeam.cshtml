@model IEnumerable<MVC.Models.ViewModel.TeamListItem>

@{
    ViewBag.Title = "AssignTeam";
    int Id = Int32.Parse(Request.Url.Segments.Last());
}

<h2>Assigner une équipe à une tâche</h2>
<p>Veuillez sélectionner une équipe faisant parti du projet pour lui assigner la tâche.</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamManager)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.ActionLink(item.TeamManager.Name, "Details", new { controller = "Employee", id = item.TeamManager.Id })
                </td>
                <td>
                    @Html.ActionLink("Assigner à la tâche", "ConfirmAssignTeam", new { taskId = Request.Url.Segments.Last(), teamId = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Revenir aux détails de la tâche", "Details", new { id = Request.Url.Segments.Last() })
